<!-- Force reload the page, so that initAutocomplete works every time -->

<script>
  function afterDOMLoaded() {
    window.initAutocomplete();
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', afterDOMLoaded);
  } else {
    window.initAutocomplete();
  }
</script>

